{
    "compilerOptions": {
        "target": "es5",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": false,
        "noImplicitAny": false,
        "noImplicitReturns": false,
        "removeComments": false,
        "resolveJsonModule": true,
        "strictNullChecks": false,
        "skipLibCheck": true,
        "lib": ["dom", "es2018"],
        "strict": true,
        "outDir": "./build/",
        "sourceMap": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "__pages/*": ["./src/client/pages/*"],
            "__components/*": ["./src/client/components/*"],
            "__utils/*": ["./src/client/utils/*"],
            "__types/*": ["./src/client/types/*"],
            "__store/*": ["./src/client/store/*"],
            "__reducers*": ["./src/client/reducers/index.ts"],
            "__reducers/*": ["./src/client/reducers/*"],
            "__selectors/*": ["./src/client/selectors/*"],
            "__commonActions": ["src/client/commonActions/index.ts"],
            "__routes": ["./src/client/routes.ts"],
            "__config": ["./src/client/config.ts"],
        }
    },
    "include": [
        "*.js",
        "*.*.js",
        "*.ts",
        "src/client",
        "src/server",
        "src/typings/**/*.d.ts",
        "node_modules/@types",
    ],
    "compileOnSave": false,
    "exclude": ["public", "node_modules", "build"]
}
